<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_conference_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exemple.constrackerok.ConferenceData"
    tools:showIn="@layout/activity_conference_data">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:columnCount="2">

            <TextView
                android:text="Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Title"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TitleD"
                android:textSize="20sp"/>

            <TextView
                android:text="Date:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DateD"
                android:textSize="20sp"/>

            <TextView
                android:text="Hour:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Hour"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/hour_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HourD"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/duration"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:id="@+id/Duration"
                android:textSize="20sp"
              />

            <TextView
                android:text="@string/duration_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DurationD"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Speaker"
                android:textSize="20sp"/>

            <TextView
                android:text="@string/speaker_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SpeakerD"
                android:textSize="20sp"/>
        </GridLayout>

        <CheckBox
            android:text="@string/click_there_if_you_agree_with_our_conditions_of_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" />

         <Button
            android:text="@string/inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:id="@+id/InscriptionBtn"
             android:onClick="startConfirmInscription" />

    </LinearLayout>

</RelativeLayout>
