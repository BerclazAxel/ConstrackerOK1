<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_search_conference"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exemple.constrackerok.SearchConference"
    tools:showIn="@layout/activity_search_conference"
    android:background="@drawable/triangle">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="20sp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:columnCount="2"
            android:layout_weight="0.24">

            <TextView
                android:text="@string/your_suitable_date"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:id="@+id/textView2"
                android:textSize="20sp"
                android:gravity="center"
                 />

            <Button
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:textSize="20sp"

                android:onClick="startDateTo"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:text="@string/to"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="20sp"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:text="@string/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:textSize="20sp"

                android:onClick="startDateFrom"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:text="@string/from"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="20sp"
                android:layout_row="1"
                android:layout_column="0" />

        </GridLayout>

        <Button
            android:text="@string/SearchString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:id="@+id/SearchBtn"
            android:onClick="startSearch" />

    </LinearLayout>

</RelativeLayout>
